<% provide(:title, 'All Users') %>
<h1>All Users</h1>
 
<div class="row">
  <div class="span6">
    <% @users.each do |user| %>
      <div class="row">
	    <aside class="span4">
	  	  <section>
			<h1>
		      <%= gravatar_for user %>
		      <%= user.name %>
			</h1>
		  </section>
		</aside>
	  </div>
	  <p>Name: <%= user.name %></p>
	  <p>Email: <%= user.email %></p>
	  <br>
	<% end %>
	<%= link_to "Create a new user", new_user_path, class: "btn btn-large btn-primary" %>
  </div>
</div>