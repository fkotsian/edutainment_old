<% provide(:title, "Edit Profile") %>
<div class="container">
	<div class="row">
		<div class="span8 users">
			<%= render @user %>
		</div>
	</div>
	<br />
	<% if @user.videos.any? %>
		<div class="row">
			<div class="span2">
				<h3>Videos: (<%= @user.videos.count %>)</h3>
			</div>
			<div class="span4 offset6 pull-right">
				<%= render 'shared/searchbar' %>
			</div>
		</div>
		<div class="row videos">
			
				<%= render @videos %>
		</div>
	<% end %>

	<div class="row">
		<br />
		<br />
		<div class="span10 center">
			<%= link_to "Add some EduTainment", new_user_video_path(@user), class: "btn btn-large btn-primary" %>
		</div>
	</div>
</div>
	
<br />
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email %></p>
